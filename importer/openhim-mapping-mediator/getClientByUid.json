{
    "name": "ft-GetClientByUID",
    "description": "Retrieves a client by UID",
    "endpoint": {
      "pattern": "/ft-client/:uid"
    },
    "transformation": {
      "input": "JSON",
      "output": "JSON"
    },
    "inputMapping": {
      "requestBody.original": "original",
      "requestBody.headers": "headers",
      "lookupRequests.rs-GetClientByUID.data":"data"
    },
    "constants": {
      "resourceType": "Patient"
    },
    "requests":{
      "lookup": [],
      "response": [
        {
          "id": "rs-GetClientByUID",
          "allowedStatuses": ["2xx", "3xx", "4xx"],
          "forwardExistingRequestBody": false,
          "config": {
              "condition": "urlParams.uid and urlParams.uid != ''",
              "method": "GET",
              "url": "http://hapi-fhir:8080/fhir/Patient/:uid",
               "params": 
               {
                  "url": 
                  {
                      "uid": {
                          "path": "urlParams.uid"
                      }
                  }
                },
              "headers": {
                  "Content-Type": "application/fhir+json"
              }
          }
        }]
    }
  }